<BorderPane fx:controller="controller.VisualizzaOrdiniController"
	styleClass="root" xmlns:fx="http://javafx.com/fxml">
	<top>
		<MenuBar>
			<menus>
				<Menu text="File">
					<items>
						<MenuItem text="Open" />
						<MenuItem text="Save" />
						<MenuItem text="Exit" />
					</items>
				</Menu>
				<Menu text="Edit">
					<items>
						<MenuItem text="Copy" />
						<MenuItem text="Paste" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<TableView >
			<columns>
				<TableColumn text="Id">
				</TableColumn>
				<TableColumn text="Stato">
				</TableColumn>
				<TableColumn text="">
				</TableColumn>
			</columns>
		</TableView>
	</center>
</BorderPane>

